<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movetoLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp2">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disclaimer!"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="16dp"
            android:text="Currently, The Sri Lanka National Blood Transfusion Service does not accept blood donations from Homosexual persons, Drug addicted persons, Sex workers or any person who engage sexual activities with above mentioned people. So if you belongs to any of the above mentioned groups, please be responsible to avoid from blood donating
        \nExtremely sorry for the inconvenience"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="276dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/moveToHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31">

        <CheckBox
            android:id="@+id/checkBox_drug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm not addicted to any kind of drug" />

        <CheckBox
            android:id="@+id/checkBox_homo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm Not a Homosexual person" />

        <CheckBox
            android:id="@+id/checkBox_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm Not a Sex worker or recent client" />

        <EditText
            android:id="@+id/newPassword"
            style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/roundsquarborder"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/newPassword2"
            style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundsquarborder"
            android:ems="10"
            android:hint="Re Enter Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/moveToHome"
        android:layout_width="307dp"
        android:layout_height="61dp"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896" />

    <Button
        android:id="@+id/movetoLogin2"
        android:layout_width="322dp"
        android:layout_height="39dp"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="#00000000"
        android:elevation="0dp"
        android:text="Already a User? LOGIN"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/moveToHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.32" />


</androidx.constraintlayout.widget.ConstraintLayout>