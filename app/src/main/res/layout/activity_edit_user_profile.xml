<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="vertical"
        tools:context=".EditUserProfile">

        <include layout="@layout/header"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toDeleteAccBtn"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:text="Delete Account"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/roundsqr"
            android:backgroundTint="@color/lightRed"/>

        <ImageView
            android:id="@+id/user_profile_picture"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/user"
            android:layout_marginBottom="30dp"/>


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/red"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="15dp"
            android:paddingVertical="15dp"/>

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:text="First Name : "/>
            <EditText
                android:id="@+id/Fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#020202"
                android:textSize="@dimen/textSize_normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:text="Last Name : "/>
            <EditText
                android:id="@+id/Lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#020202"
                android:textSize="@dimen/textSize_normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:text="NIC No. : "/>
            <EditText
                android:id="@+id/nic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="20010045446"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#020202"
                android:textSize="@dimen/textSize_normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:text="Mobile Number : "/>
            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="1234567890"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#020202"
                android:textSize="@dimen/textSize_normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:text="Gender : "/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Gender"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/selectGender"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:text="Date of Birth : "/>
            <EditText
                android:id="@+id/inputBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="2022/01/01"
                android:inputType="date"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#020202"
                android:textSize="@dimen/textSize_normal" />
            <Button
                android:id="@+id/dateSelect"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:height="50dp"
                android:width="50dp"
                android:background="@drawable/baseline_edit_calendar_24"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingVertical="30dp"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:id="@+id/toDashboard"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Cancel"
                android:textSize="15sp"/>
            <Button
                android:layout_width="100dp"
                android:id="@+id/toSaveEdit"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textSize="15dp"
                android:text="SAVE"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
