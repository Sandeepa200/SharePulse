<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="vertical"
        tools:context=".UserProfile">

        <include layout="@layout/header"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logoutBtn"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:text="Logout"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/roundsqr"
            android:backgroundTint="@color/lightRed"/>
        <ImageView
            android:layout_marginTop="0dp"
            android:id="@+id/profile_picture"
            android:layout_gravity="center_horizontal"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="25dp"
            android:id="@+id/name_set"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:id="@+id/fname_display_top"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingRight="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:id="@+id/lname_display_top"
                android:paddingLeft="2dp"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/red"
            android:layout_marginHorizontal="15dp"
            android:paddingVertical="15dp"/>
        <ProgressBar
            android:id="@+id/progressBar3"

            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:text="First Name : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/fname_display"
                android:textStyle="italic"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:hint="First Name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:text="Last Name : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/lname_display"
                android:textStyle="italic"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:hint="Last Name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:text="Email : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/email_display"
                android:textStyle="italic"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:hint="email"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:text="NIC No : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/nic_display"
                android:textStyle="italic"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:hint="20000101010101"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:text="Mobile Number : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/mobile_display"
                android:textStyle="italic"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:hint="0781234567"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:text="Gender : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/gender_display"
                android:textStyle="italic"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:hint="male"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:text="Date of Birth : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/dob_display"
                android:textStyle="italic"
                android:textSize="@dimen/textSize_normal"
                android:layout_marginRight="5dp"
                android:hint="2000.01.01"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp"
            android:paddingVertical="30dp"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:id="@+id/toEditProfile"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Edit"
                android:textSize="15sp"/>
            <Button
                android:layout_width="100dp"
                android:id="@+id/toDashboard"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textSize="15dp"
                android:text="OK"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
